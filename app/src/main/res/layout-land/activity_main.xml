<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_count_text"
        android:textSize="100sp"
        android:textAlignment="center"
        android:textColor="@color/colorTextCount"/>

    <Button
        android:id="@+id/button_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_button_count"
        android:textSize="40sp"
        android:background="@drawable/button_top"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/button_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_button_reset"
        android:textSize="40sp"
        android:background="@drawable/button_bottom"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="5dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>